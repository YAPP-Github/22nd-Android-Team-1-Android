<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <declare-styleable name="LargeButton">
        <attr name="android:background" format="reference" />
        <attr name="android:backgroundTint" format="color" />
        <attr name="android:text" format="reference|string" />
        <attr name="android:textColor" format="color" />
        <attr name="showChevron" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MediumButton">
        <attr name="android:background" format="reference" />
        <attr name="android:backgroundTint" format="color" />
        <attr name="android:textColor" format="color" />
        <attr name="android:text" format="reference|string" />
        <attr name="thumbsBackground" format="reference" />
        <attr name="thumbsBackgroundTint" format="color" />
        <attr name="showThumbs" format="boolean" />
    </declare-styleable>

    <!-- Chip -->
    <declare-styleable name="SmallChip">
        <attr name="android:text" format="reference|string" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MediumChip">
        <attr name="android:text" format="reference|string" />
        <attr name="android:textColor" format="color" />
        <attr name="android:backgroundTint" format="color" />
        <attr name="android:background" format="reference" />
        <attr name="chipThumbsBackground" format="reference" />
        <attr name="chipThumbsBackgroundTint" format="color" />
    </declare-styleable>

    <!-- Selector -->
    <declare-styleable name="SmallSelector">
        <attr name="android:text" format="reference|string" />
        <attr name="android:textColor" format="color" />
        <attr name="android:backgroundTint" format="color" />
        <attr name="android:background" format="reference" />
        <attr name="iconBackground" format="reference" />
        <attr name="iconBackgroundTint" format="color" />
        <attr name="showIcon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MediumSelector">
        <attr name="android:text" format="reference|string" />
        <attr name="android:textColor" format="color" />
        <attr name="android:background" format="reference" />
        <attr name="iconBackground2" format="reference" />
    </declare-styleable>
</resources>