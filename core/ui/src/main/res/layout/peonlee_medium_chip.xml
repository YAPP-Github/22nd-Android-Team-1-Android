<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mediumChipBackground"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/medium_chip_height">

    <ImageView
        android:id="@+id/iv_mediumChipThumbs"
        android:layout_width="@dimen/chip_icon_size"
        android:layout_height="@dimen/chip_icon_size"
        android:layout_marginStart="@dimen/space_large"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mediumChipTitle"
        app:layout_constraintEnd_toStartOf="@+id/tv_mediumChipTitle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_mediumChipTitle">
    </ImageView>

    <TextView
        android:id="@+id/tv_mediumChipTitle"
        style="@style/Text.Body04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginEnd="@dimen/space_s_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_mediumChipThumbs"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="또 먹을거에요">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>