<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_selectorBackground"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/small_selector_height"
    tools:background="@drawable/bg_white_outline_radius_17dp">

    <TextView
        style="@style/Text.Body02"
        android:id="@+id/tv_selectorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_m_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_selectorIcon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="@dimen/space_s_large"
        tools:text="텍스트">
    </TextView>

    <ImageView
        android:id="@+id/iv_selectorIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/selector_left_right"
        android:layout_marginEnd="@dimen/space_s_large"
        app:layout_constraintBottom_toBottomOf="@+id/tv_selectorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_selectorTitle"
        app:layout_constraintTop_toTopOf="@+id/tv_selectorTitle">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>